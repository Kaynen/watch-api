// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            BigInt @default(autoincrement()) @id
  name          String @db.VarChar(255)
  image         String @db.VarChar(255)
  email         String @db.VarChar(255)
  password      String @db.VarChar(255)
  phone         String @db.VarChar(255)
  cpf           String @db.VarChar(255)
  theftAlert    TheftAlert[]
  report        CollaborativeReport[]
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt()
  deleted_at    DateTime? @db.Timestamp(0)
}

model Branch {
  id            BigInt @default(autoincrement()) @id
  name          String @db.VarChar(255)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt
  deleted_at    DateTime? @db.Timestamp(0)
  vehicles      Vehicle[]
}

model VehicleType {
  id            BigInt @default(autoincrement()) @id
  name          String @db.VarChar(255)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt()
  deleted_at    DateTime? @db.Timestamp(0)
  vehicles      Vehicle[]
}

model Vehicle {
  id            BigInt @default(autoincrement()) @id
  branch        Branch @relation(fields: [branch_id], references: [id])
  branch_id     BigInt
  type          VehicleType @relation(fields: [type_id], references: [id])
  type_id       BigInt
  model         String @db.VarChar(255)
  color         String @db.VarChar(255)
  board         String @db.VarChar(255)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt()
  deleted_at    DateTime? @db.Timestamp(0)
  images        VehicleImage[]
  theftAlert    TheftAlert[]
  tracking      Tracking[]
  report        CollaborativeReport[]
}


model VehicleImage {
  id            BigInt @default(autoincrement()) @id
  vehicle       Vehicle @relation(fields: [vehicle_id], references: [id])
  vehicle_id    BigInt
  image         String @db.VarChar(255)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt()
  deleted_at    DateTime? @db.Timestamp(0)
}


model TheftAlert {
  id            BigInt @default(autoincrement()) @id
  user          User @relation(fields: [user_id], references: [id])
  user_id       BigInt
  vehicle       Vehicle @relation(fields: [vehicle_id], references: [id])
  vehicle_id    BigInt
  address       String @db.VarChar(255)
  lat           String @db.VarChar(255)
  lng           String @db.VarChar(255)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt()
  deleted_at    DateTime? @db.Timestamp(0)
}

model Tracking {
  id            BigInt @default(autoincrement()) @id
  vehicle       Vehicle @relation(fields: [vehicle_id], references: [id])
  vehicle_id    BigInt
  lat           String @db.VarChar(255)
  lng           String @db.VarChar(255)
  address       String @db.VarChar(255)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt()
  deleted_at    DateTime? @db.Timestamp(0)
}

model CollaborativeReport {
  id            BigInt @default(autoincrement()) @id
  vehicle       Vehicle @relation(fields: [vehicle_id], references: [id])
  vehicle_id    BigInt
  user          User @relation(fields: [user_id], references: [id])
  user_id       BigInt
  lat           String @db.VarChar(255)
  lng           String @db.VarChar(255)
  address       String @db.VarChar(255)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt()
  deleted_at    DateTime? @db.Timestamp(0)
}